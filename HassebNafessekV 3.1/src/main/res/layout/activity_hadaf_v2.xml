<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context="zizkuz_menu.hassebnafssak.HadafV2"
                android:background="#ee2c0000">


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbarGrapheHadaf"
        android:minHeight="?attr/actionBarSize"
        android:background="@drawable/gold"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        >
    </android.support.v7.widget.Toolbar>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="حدد أهدافك الشهرية في الخانات التالية"
        android:id="@+id/TitleTahdid"
        android:layout_marginTop="80dp"
        android:layout_centerHorizontal="true"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:textSize="23dp"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        android:layout_below="@+id/TitleTahdid"
        android:id="@+id/Linear1"
        android:layout_marginTop="40dp"
        android:weightSum="1"
        >

        <TextView
            android:layout_width="1dp"
            android:layout_height="45dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="يوم في الشهر"
            android:id="@+id/textView"
            android:gravity="right"
            android:textAlignment="gravity"
            android:layout_weight="0.52"
            android:paddingRight="20dp"
            android:textStyle="bold"
            android:textColor="#D4AF37"
            android:textSize="15dp"/>

        <Spinner
            android:id="@+id/spinnerSalat"
            android:layout_width="20dp"
            android:layout_height="45dp"
            android:layout_weight="0.25"
            android:background="@drawable/goldboutonmain"
            android:transitionGroup="false"
            android:textAlignment="center"/>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_height="45dp"
            android:text="الصلوات في وقتها"
            android:id="@+id/buttonSalat"
            android:clickable="false"
            android:layout_weight="0.24"
            android:layout_width="45dp"
            android:textColor="#D4AF37"
            android:background="#ee2c0000"
            android:textStyle="bold"
            android:textSize="15dp"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        android:layout_below="@+id/Linear1"
        android:id="@+id/Linear2"
        android:weightSum="1"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"



        >
        <TextView
            android:layout_width="20dp"
            android:layout_height="45dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="جزء في الشهر"
            android:id="@+id/textView2"
            android:gravity="right"
            android:textAlignment="gravity"
            android:layout_weight="0.52"
            android:paddingRight="20dp"
            android:textStyle="bold"


            android:textColor="#D4AF37"
            android:textSize="15dp"/>
        <Spinner
            android:id="@+id/spinnerQuran"
            android:layout_width="25dp"
            android:layout_marginRight="7dp"
            android:layout_height="45dp"
            android:layout_weight="0.25"

            android:background="@drawable/goldboutonmain"
            android:textAlignment="center"/>
        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_height="45dp"
            android:layout_weight="0.24"
            android:layout_width="45dp"
            android:textSize="15dp"
            android:text="تلاوة القرآن"
            android:id="@+id/buttonQuran"
            android:clickable="false"
            android:textColor="#D4AF37"
            android:background="#ee2c0000"


            android:textStyle="bold"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        android:layout_below="@+id/Linear2"
        android:id="@+id/Linear3"

        android:weightSum="1"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        >
        <TextView
            android:layout_width="20dp"
            android:layout_height="45dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="يوم في الشهر"
            android:id="@+id/textView3"
            android:gravity="right"
            android:textAlignment="gravity"
            android:layout_weight="0.52"

            android:paddingRight="20dp"
            android:textStyle="bold"
            android:textColor="#D4AF37"
            android:textSize="15dp"/>

        <Spinner
            android:id="@+id/spinnerSiyam"
            android:layout_width="25dp"
            android:layout_marginRight="7dp"
            android:layout_height="45dp"
            android:layout_weight="0.25"
            android:background="@drawable/goldboutonmain"
            android:textAlignment="center"/>


        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_height="45dp"
            android:text="الصيام"
            android:id="@+id/buttonSiyam"
            android:layout_weight="0.24"
            android:layout_width="45dp"
            android:textSize="15dp"
            android:clickable="false"
            android:textColor="#D4AF37"
            android:background="#ee2c0000"
            android:textStyle="bold"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        android:layout_below="@+id/Linear3"
        android:id="@+id/Linear4"
        android:weightSum="1"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        >
        <TextView
            android:layout_width="20dp"
            android:layout_height="45dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="يوم في الشهر"
            android:id="@+id/textView4"
            android:gravity="right"
            android:textAlignment="gravity"
            android:layout_weight="0.52"

            android:paddingRight="20dp"
            android:textStyle="bold"
            android:textColor="#D4AF37"
            android:textSize="15dp"/>
        <Spinner
            android:id="@+id/spinnerSadaqa"
            android:layout_width="25dp"
            android:layout_marginRight="7dp"
            android:layout_height="45dp"
            android:layout_weight="0.25"
            android:background="@drawable/goldboutonmain"
            android:textAlignment="center"/>


        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_height="wrap_content"
            android:text="إخراج صدقة"
            android:id="@+id/buttonSadaqa"
            android:layout_weight="0.24"
            android:layout_width="45dp"
            android:textSize="15dp"
            android:clickable="false"
            android:textColor="#D4AF37"
            android:background="#ee2c0000"
            android:textStyle="bold"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        android:layout_below="@+id/Linear4"
        android:id="@+id/Linear5"
        android:weightSum="1"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        >

        <TextView
            android:layout_width="20dp"
            android:layout_height="45dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="مرة في الشهر"
            android:id="@+id/textView5"
            android:gravity="right"
            android:textAlignment="gravity"
            android:layout_weight="0.52"

            android:paddingRight="20dp"
            android:textStyle="bold"
            android:textColor="#D4AF37"
            android:textSize="15dp"/>

        <Spinner
            android:id="@+id/spinnerAdkarAssabah"
            android:layout_width="25dp"
            android:layout_marginRight="7dp"
            android:layout_height="45dp"
            android:layout_weight="0.25"
            android:background="@drawable/goldboutonmain"
            android:textAlignment="center"/>



        <Button
            style="?android:attr/buttonStyleSmall"

            android:layout_height="wrap_content"
            android:text="صلة رحم"
            android:id="@+id/buttonAdkarAssabah"
            android:layout_weight="0.24"
            android:layout_width="45dp"
            android:textSize="15dp"
            android:clickable="false"
            android:textColor="#D4AF37"
            android:background="#ee2c0000"
            android:textStyle="bold"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        android:layout_below="@+id/Linear5"
        android:id="@+id/Linear6"
        android:weightSum="1"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        >

        <TextView
            android:layout_width="20dp"
            android:layout_height="45dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="يوم في الشهر"
            android:id="@+id/textView6"
            android:gravity="right"
            android:textAlignment="gravity"
            android:layout_weight="0.52"

            android:paddingRight="20dp"
            android:textStyle="bold"
            android:textColor="#D4AF37"
            android:textSize="15dp"/>

        <Spinner
            android:id="@+id/spinnerAdkarAlmassa"
            android:layout_width="25dp"
            android:layout_marginRight="7dp"
            android:layout_height="45dp"
            android:layout_weight="0.25"
            android:background="@drawable/goldboutonmain"
            android:textAlignment="center"/>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_height="wrap_content"
            android:text="ذكر الله كثيرا"
            android:id="@+id/buttonAdkarAlmasaa"
            android:layout_weight="0.24"
            android:layout_width="45dp"
            android:textSize="15dp"
            android:clickable="false"
            android:textColor="#D4AF37"
            android:background="#ee2c0000"
            android:textStyle="bold"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        android:layout_below="@+id/Linear6"
        android:id="@+id/Linear7"
        android:weightSum="1"
        android:layout_alignParentRight="true"

        android:layout_marginTop="10dp"
        >

        <TextView
            android:layout_width="20dp"
            android:layout_height="45dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="يوم في الشهر"
            android:id="@+id/textView7"
            android:gravity="right"
            android:textAlignment="gravity"
            android:layout_weight="0.52"

            android:paddingRight="20dp"
            android:textStyle="bold"
            android:textColor="#D4AF37"
            android:textSize="15dp"/>
        <Spinner
            android:id="@+id/spinnerQiyam"
            android:layout_width="25dp"
            android:layout_marginRight="7dp"
            android:layout_height="45dp"
            android:layout_weight="0.25"
            android:background="@drawable/goldboutonmain"
            android:textAlignment="center"/>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_height="wrap_content"
            android:text=" تعلم شيئ جديد"
            android:id="@+id/buttonQiyam"
            android:layout_weight="0.24"
            android:layout_width="45dp"
            android:textSize="15dp"
            android:clickable="false"
            android:textColor="#D4AF37"
            android:background="#ee2c0000"
            android:textStyle="bold"/>

    </LinearLayout>



    <Button
    android:layout_width="150dp"
    android:layout_height="45dp"
    android:text="إدخال"
    android:id="@+id/Idkhal1"
    android:layout_alignParentBottom="true"
    android:layout_marginLeft="100dp"
    android:textColor="#ee2c0000"
    android:background="@drawable/gold"
    android:textStyle="bold"
    android:textSize="30dp"
    android:elegantTextHeight="true"
    android:ellipsize="middle"
    android:enabled="true"
    android:focusable="false"/>


</RelativeLayout>
